#!/bin/sh

function build {
    # build the app for pypi
    source venv/bin/activate
    if test ; then
        echo "‚öôÔ∏è building Word-Search-Generator..."
        python -m build
    else
        echo "‚ùå build was unsuccessful"
    fi
}

# function test {

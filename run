#!/bin/sh

cdir=$(pwd)
app=$(basename $cdir)

function build {
    # build the app for pypi
    source venv/bin/activate
    if tests && linting ; then
        echo "‚öôÔ∏è building $app..."
        python -m build
    else
        echo "‚ùå build was unsuccessful"
    fi
}

function linting {
    # lint app using black and flake8
    echo "üßæ linting $app..."
    source venv/bin/activate
    black src
    flake8 src
}

function tests {
    # test app using pytest
    echo "üßæ testing $app..."
    source venv/bin/activate
    pytest
}

function upload {
    # upload to pypi
    read -p '‚ùì version? ' version
    echo "‚¨ÜÔ∏è uploading $app to pypi..."
    twine upload dist/*$version*
}

function help {
  printf "%s <task> [args]\n\nTasks:\n" "${0}"

  compgen -A function | grep -v "^_" | cat -n

  printf "\nExtended help:\n  Each task has comments for general usage\n"
}

TIMEFORMAT=$'\nTask completed in %3lR'
time "${@:-help}"